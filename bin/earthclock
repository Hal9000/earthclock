#!/usr/bin/env ruby
# frozen_string_literal: true

$stdout.sync = true

# Optional CLI preset, e.g. `bin/earthclock 1stlanding`
if ARGV && ARGV.first && !ARGV.first.strip.empty?
  preset = ARGV.first.strip
  ENV["EC_PRESET"] = preset
end

$LOAD_PATH.unshift(File.expand_path("../lib", __dir__))
require "earthclock/app"

EarthClock::App.run

